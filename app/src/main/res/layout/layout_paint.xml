<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/colour_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_one"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/colour_two"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_two"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/colour_three"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_three"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/colour_four"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_four"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/colour_five"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_five"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/colour_six"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_six"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/colour_seven"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_seven"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/colour_eight"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_eight"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/color_nine"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"
                android:background="@drawable/circular_drawable"
                android:backgroundTint="@color/colour_nine"
                android:backgroundTintMode="multiply">
            </ImageView>

            <ImageView
                android:id="@+id/colour_ten"
                android:layout_width="20dp"
